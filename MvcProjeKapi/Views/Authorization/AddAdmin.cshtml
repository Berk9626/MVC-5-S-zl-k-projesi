@model EntityLayer.Concrete.Admin
@{
	ViewBag.Title = "AddAdmin";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Admin Ekleme Sayfası</h1>
<br /> 
@using (Html.BeginForm("AddAdmin", "Authorization", FormMethod.Post))  //ilki üzerinde çalıştığım Actionun değeri,ikincisi controller ismi, üçüncüsü post olduğum zaman
{
<div class="form-group">
	@Html.Label("Admin Adı: ")
	@Html.TextBoxFor(x => x.AdminUserName, new { @class = "form-control" })
	
	<br /> 
	@Html.Label("Şifreyi giriniz: ")
	@Html.TextBoxFor(x => x.AdminPassword, new { @class = "form-control" })
	<br /> 
	@Html.Label("Admin rolünü giriniz: ")
	@Html.TextBoxFor(x => x.AdminRole, new { @class = "form-control" })
	<br /> 
	<button>Kaydet</button>

</div>

}
